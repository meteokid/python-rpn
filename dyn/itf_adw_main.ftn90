#include "msg.h"

!/**
subroutine itf_adw_main(F_nb_iter, isStatStep_L)
   implicit none
   !@objective Initialisation before Performing advection
   !@arguments
   integer :: F_nb_iter       !I, total number of iterations for trajectories
   logical :: isStatStep_L    !I, .t. if must do stats at present step
   !@author  Stephane Chamberland, Apr 2010
!**/
   logical :: use_adx_L
   logical, external :: adw_get_useadx
   !---------------------------------------------------------------------
   call msg(MSG_DEBUG,'itf_adw_main')

   use_adx_L = adw_get_useadx()
   if (use_adx_L) then
      call itf_adx_main(F_nb_iter)
   else
      call adw_main(F_nb_iter, isStatStep_L)
   endif

   call msg(MSG_DEBUG,'itf_adw_main [end]')
   !---------------------------------------------------------------------
   return
end subroutine itf_adw_main
