***s/r  bac - backsubstitution ( memory management and call to bacp_2 )
*
#include "model_macros_f.h"
*
      subroutine bac( Itr, Itnlh )
*
#include "impnone.cdk"
*
      integer Itr, Itnlh
*
*author
*     Alain Patoine - Gabriel Lemay
*
*revision
* v2_00 - Desgagne M.       - initial MPI version 
* v2_30 - Edouard  S.       - adapt for vertical hybrid coordinate
* v2_31 - Desgagne M.       - removed treatment of Hu and Qc
* v3_00 - Desgagne & Lee    - Lam configuration
* v_stg - Plante A.         - Staggered version
*
*object
*******************************************************************************
* Back subtitution see :
* GEMergo4.doc by Claude Girard
*******************************************************************************
*
*arguments
*  Name        I/O                 Description
*----------------------------------------------------------------
*  Itr          I           current nonlinear iteration number 
*  Itnlh        I           total number of nonlinear iterations
*----------------------------------------------------------------
*
*implicits
#include "glb_ld.cdk"
#include "lun.cdk"
#include "schm.cdk"
#include "p_geof.cdk"
#include "rhsc.cdk"
#include "nl.cdk"
#include "vt0.cdk" 
#include "vtx.cdk" 
#include "lctl.cdk"
#include "func.cdk"
*
*modules
      integer  vmmlod, vmmget, vmmuld
      external vmmlod, vmmget, vmmuld
*
      integer pnerr, pnlod, pnlkey1(17)
**
*     __________________________________________________________________
*
      if (Lun_debug_L) write(Lun_out,1000)
      pnlkey1( 1) = VMM_KEY(topo)
      pnlkey1( 2) = VMM_KEY(ut0)
      pnlkey1( 3) = VMM_KEY(vt0)
      pnlkey1( 4) = VMM_KEY(tt0)
      pnlkey1( 5) = VMM_KEY(psdt0)
      pnlkey1( 6) = VMM_KEY(st0)
      pnlkey1( 7) = VMM_KEY(gptx)
      pnlkey1( 8) = VMM_KEY(fiptx)
      pnlkey1( 9) = VMM_KEY(ru)
      pnlkey1(10) = VMM_KEY(rv)
      pnlkey1(11) = VMM_KEY(rcn)
      pnlkey1(12) = VMM_KEY(rth)
      pnlkey1(13) = VMM_KEY(csh)
      pnlod = 13
      if (.not. Schm_hydro_L) then
         pnlkey1(14) = VMM_KEY(qsect0)
         pnlkey1(15) = VMM_KEY(wt0)
         pnlkey1(16) = VMM_KEY(rvv)
         pnlkey1(17) = VMM_KEY(rw)
         pnlod = 17
      endif
*
      pnerr = vmmlod(pnlkey1,pnlod)
*
      pnerr = VMM_GET_VAR(topo)
      pnerr = VMM_GET_VAR(ut0)
      pnerr = VMM_GET_VAR(vt0)
      pnerr = VMM_GET_VAR(tt0)
      pnerr = VMM_GET_VAR(psdt0)
      pnerr = VMM_GET_VAR(st0)
      pnerr = VMM_GET_VAR(gptx)
      pnerr = VMM_GET_VAR(fiptx)
      pnerr = VMM_GET_VAR(ru)
      pnerr = VMM_GET_VAR(rv)
      pnerr = VMM_GET_VAR(rcn)
      pnerr = VMM_GET_VAR(rth)
      pnerr = VMM_GET_VAR(csh)
      if (.not. Schm_hydro_L) then
         pnerr = VMM_GET_VAR(qsect0)
         pnerr = VMM_GET_VAR(wt0)
         pnerr = VMM_GET_VAR(rvv)
         pnerr = VMM_GET_VAR(rw)
      else
         qsect0_ = 0
         wt0_    = 0
         rvv_    = 0
         rw_     = 0
      endif
*
      call  bacp_2 (   Itr   , Itnlh,   st0,
     %                 fiptx ,  topo,   tt0,
     %                 ut0   ,   vt0, psdt0,
     %                 qsect0,   wt0,   csh,  gptx,
     %                 ru    ,    rv,   rth,    rw,
     %                 rvv   ,   rcn, nl_nu, nl_nv,
     $                 nl_nth, nl_nw,nl_nvv,nl_ncn,
     $                 LDIST_DIM, l_nk )
*
      pnerr = vmmuld(-1,0)
1000  format (5X,'BACK SUBSTITUTION: (S/R BAC)')
*     __________________________________________________________________
*
      return
      end

