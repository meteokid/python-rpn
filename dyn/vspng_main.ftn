***s/r vspng_main - applies horizontal diffusion with vertical modulation
*                   on Vspng_nk top levels
*
#include "model_macros_f.h"
*
      subroutine vspng_main
*
#include "impnone.cdk"
*
*author
*     Michel Desgagne  - October 2000
*
*revision
* v2_11 - Desgagne M.       - initial version 
* v2_21 - Desgagne M.       - new call to horwavg
* v2_30 - Edouard  S.       - adapt for vertical hybrid coordinate
* v3_02 - Lee V.            - adapt for LAM 
* v3_10 - Corbeil & Desgagne & Lee - AIXport+Opti+OpenMP
*
*object
* applies horizontal diffusion with vertical modulation of 
* the diffusion coefficient on Vspng_nk top levels 
*  (1) del-2 horizontal diffusion used for non-LAM
*  (2) 9 point explicit filter used for LAM
*	
*arguments
*     none
*
*implicits
#include "glb_ld.cdk"
#include "lun.cdk"
#include "schm.cdk"
#include "cstv.cdk"
#include "vspng.cdk"
#include "vt0.cdk"
#include "vt1.cdk"
#include "vtx.cdk"
#include "p_geof.cdk"
#include "type.cdk"
#include "ver.cdk"
*
*modules
      integer  vmmlod,vmmuld,vmmget
      external vmmlod,vmmuld,vmmget
*
      integer pnerr, pnlod, pnlkey1(6), i, j, k
      real*8  ONE_8, bbb_8, eta_8
      real wk0(LDIST_SHAPE), wk1(LDIST_SHAPE)
      parameter( ONE_8 = 1. )
**
*     _________________________________________________________________
*
      if (Vspng_nk.lt.1) return
*
      pnlkey1(1)  = VMM_KEY(ut1)
      pnlkey1(2)  = VMM_KEY(vt1)
      pnlkey1(3)  = VMM_KEY(tt1)
      pnlkey1(4) = VMM_KEY(st0)
      pnlkey1(5) = VMM_KEY(st1)
      pnlod = 5
      if (.not. Schm_hydro_L) then
         pnlkey1(6) = VMM_KEY(wt1)
         pnlod = 6
      endif
*     - - - - - - - - - - - - - - -
      pnerr = vmmlod(pnlkey1,pnlod)
*     - - - - - - - - - - - - - - -
      pnerr = VMM_GET_VAR(ut1)
      pnerr = VMM_GET_VAR(vt1)
      pnerr = VMM_GET_VAR(tt1)
      pnerr = VMM_GET_VAR(st0)
      pnerr = VMM_GET_VAR(st1)
      if (.not. Schm_hydro_L) then
         pnerr = VMM_GET_VAR(wt1)
      else
         wt1_  = 0
         qsect1_ = 0
      endif
*
      if (G_lam) then
         if (Lun_debug_L) write (Lun_out,1001) Vspng_nk
         call vspng_drv_lam ( ut1, vt1, tt1, wt1, LDIST_DIM, G_nk )
      else
         if (Lun_debug_L) write (Lun_out,1000) Vspng_nk
         call vspng_drv ( ut1, vt1, tt1, wt1, LDIST_DIM, G_nk )
      endif
*
!$omp parallel
       if (Cstv_phidf_8.gt.0.) then
*
*     Adjust surface pressure (FOR CLIMATE APPLICATIONS) 
*     ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
      if (Schm_psadj_L) then
!$omp do
      do j= 1+pil_s, l_nj-pil_n
      do i= 1+pil_w, l_ni-pil_e
         wk0(i,j) = st0(i,j)
         wk1(i,j) = st1(i,j)
      end do
      call vsexp (wk0(1+pil_w,j),wk0(1+pil_w,j),(l_ni-pil_e-pil_w))
      call vsexp (wk1(1+pil_w,j),wk1(1+pil_w,j),(l_ni-pil_e-pil_w))
      do i= 1+pil_w, l_ni-pil_e
         wk0(i,j) = (wk0(i,j)-1.)*Cstv_pisrf_8
         wk1(i,j) = (wk1(i,j)-1.)*Cstv_pisrf_8
      end do
      end do
!$omp enddo
*
!$omp single
         call horwavg ( bbb_8, wk0, wk1, LDIST_DIM )
!$omp end single
*
*        Redistribute the average mass loss at the surface, ...
*
!$omp do
         do j= 1+pil_s, l_nj-pil_n
         do i= 1+pil_w, l_ni-pil_e
            wk1= wk1 + bbb_8
         end do
         end do
!$omp enddo
*
*        ... correct s immediately and ...
*
!$omp do
         do j= 1+pil_s, l_nj-pil_n
         do i= 1+pil_w, l_ni-pil_e
            st1(i,j)= log(ONE_8+dble(wk1(i,j)/Ver_pib%t(G_nk+1)))
         end do
         end do
!$omp enddo
*
      endif
*
      endif
*
!$omp end parallel
      pnerr = vmmuld(-1,0)
*    
 1000 format(/,3X,
     $ 'DEL-2 SPONGE LAYER ON TOP ',I3,' LAYERS: (S/R VSPNG_DRV)')
 1001 format(/,3X,
     $ '9PT FILT SPONGE LAYER ON TOP ',I3,' LAYERS: (S/R VSPNG_DRV_LAM)')
*
      return
      end
