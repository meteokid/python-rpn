***s/r surfix - force wind and temperature values at surface
*
#include "model_macros_f.h"
*
      subroutine surfix 
*
      implicit none
*
*
*author
*         Sylvie Gravel, September 2004
*
*revision
* v3_20 - Gravel S. - initial MPI version
* v4_05 - Lepine M. - VMM replacement with GMM
*
*object
*	
*implicits
#include "gmm.hf"
#include "var_gmm.cdk"
#include "glb_ld.cdk"
#include "vt0.cdk"
#include "vt1.cdk"
*
**

      integer i,j
*
*     ---------------------------------------------------------------
*
      gmmstat = gmm_get(gmmk_ut1_s,ut1,meta3d)
      if (GMM_IS_ERROR(gmmstat)) print *,'surfix ERROR at gmm_get(ut1)'
      gmmstat = gmm_get(gmmk_vt1_s,vt1,meta3d)
      if (GMM_IS_ERROR(gmmstat)) print *,'surfix ERROR at gmm_get(vt1)'
      gmmstat = gmm_get(gmmk_tt1_s,tt1,meta3d)
      if (GMM_IS_ERROR(gmmstat)) print *,'surfix ERROR at gmm_get(tt1)'

      do j=1,l_nj
      do i=1,l_ni
        tt1(i,j,l_nk) = tt1(i,j,l_nk-1)
      enddo
      enddo
      do j=1,l_nj
      do i=1,l_niu
        ut1(i,j,l_nk) = ut1(i,j,l_nk-1)
      enddo
      enddo
      do j=1,l_njv
      do i=1,l_ni
        vt1(i,j,l_nk) = vt1(i,j,l_nk-1)
      enddo
      enddo
*
*     ---------------------------------------------------------------
*
      return
      end
