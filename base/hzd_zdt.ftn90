!**s/r hzd_main - applies horizontal diffusion on zdt (possibly on u and v)
!   to smooth zdt for trajectory calculations after a Crank-Nicholson step
!   avoiding pole problems
!
#include "model_macros_f.h"
!
      subroutine hzd_zdt 
      implicit none
#include <arch_specific.hf>
!
!author
!     Claude Girard - spring 2012
!
!revision
! v4_40 - Girard C.      - initial version
!
!object
!	
!arguments
!     none
!
#include "gmm.hf"
#include "glb_ld.cdk"
#include "vt0.cdk"

      type(gmm_metadata) :: mymeta
      integer :: istat
      logical :: dummy_L
!     _________________________________________________________________
!
      istat = gmm_get(gmmk_zdt0_s,zdt0,mymeta)
      if (GMM_IS_ERROR(istat)) print *,'hzd_zdt ERROR at gmm_get(zdt0)'

      call hzd_ctrl2(zdt0, 'S', G_nk+1,dummy_L)
!     _________________________________________________________________
!
      return
      end
