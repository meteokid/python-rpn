      integer, parameter :: MAXSTAT=999, STN_NAME_LENGTH=128
      integer, parameter :: STN_MISSING=-9999
      type station_ij
        sequence
        character(STN_NAME_LENGTH) :: name
        integer :: i,j
      end type station_ij
      type station_latlon
        sequence
        character(STN_NAME_LENGTH) :: name
        real :: lat,lon
      end type station_latlon
      type station
        sequence
        character(STN_NAME_LENGTH) :: name
        real :: lat,lon
        integer :: i,j
        integer :: index,lclsta,stcori,stcorj
      end type station
      integer Xst_nstat,Xst_dimsers,Xst_dimserp,xst_nstatl
      type(station_ij), dimension(MAXSTAT) :: Xst_stn_ij
      type(station_latlon), dimension(MAXSTAT) :: Xst_stn_latlon
      type(station), dimension(MAXSTAT) :: Xst_stn
!
      common / xst_i / Xst_nstat,Xst_dimsers, Xst_dimserp
      common / xst_station_ij / Xst_stn_ij
      common / xst_station_latlon / Xst_stn_latlon
      common / xst_station / Xst_stn
