      real*8, pointer :: adv_vsec_8(:),adv_vtan_8(:)!local grid,sec,tan on lat
      real*8, pointer :: adv_cx_8(:),adv_sx_8(:)  !local grid cos/sin x
      real*8, pointer :: adv_cy_8(:),adv_sy_8(:)  !local grid cos/sin y

