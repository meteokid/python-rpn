***s/r adw_main_ad - ADJ of adw_main_tl 
*
#include "model_macros_f.h"
*
      subroutine adw_main_ad ( F_it )
*
      implicit none
*
      integer F_it
*
*author
*     monique tanguay
*
*revision
* v2_31 - Tanguay M.        - initial MPI version
* v3_00 - Tanguay M.        - adapt to restructured adw_main 
* v3_20 - Tanguay M.        - Option of storing instead of redoing TRAJ 
* v3_21 - Tanguay M.        - Revision Openmp 
* v3_30 - Tanguay M.        - Adapt TL/AD to Adw_interp_type_S
* v4_04 - Tanguay M.        - Staggered version TL/AD 
*
*language
*     fortran 77
*
*object
*     see id section
*
*arguments
*______________________________________________________________________
*        |                                                       |     |
* NAME   | DESCRIPTION                                           | I/O |
*--------|-------------------------------------------------------|-----|
* F_it   | total number of iterations for trajectories           |  i  |
*________|_______________________________________________________|_____|
*
*implicits
#include "glb_ld.cdk"
#include "lun.cdk"
#include "adw.cdk"
#include "vth_m.cdk"
#include "orh_m.cdk"
#include "vt0_m.cdk"
#include "tr3d.cdk"
#include "schm.cdk"
#include "orh.cdk"
#include "rhsc_m.cdk"
*
      integer  vmmlod, vmmget, vmmuld
      external vmmlod, vmmget, vmmuld
      integer pnerr, pnlkey1(30), pnlod
*
      integer key0_m(Tr3d_ntr), keyt_m(Tr3d_ntr),
     $        key0_m_, keyt_m_, err, i, j, k, n
*
      real tr0_m,ort_m
      pointer (patr0_m, tr0_m(LDIST_SHAPE,*)),(paort_m, ort_m(LDIST_SHAPE,*))
*
      real , dimension (Adw_nit*Adw_njt*G_nk) :: u,v
      real , dimension (Adw_nit*Adw_njt*(G_nk+1)) :: w
*
      real , dimension (Adw_nit*Adw_njt*G_nk) :: u_m,v_m
      real , dimension (Adw_nit*Adw_njt*(G_nk+1)) :: w_m
*
      real , dimension (Adw_nit*Adw_njt*G_nk) :: uwork_m,vwork_m
      real , dimension (Adw_nit*Adw_njt*(G_nk+1)) :: wwork_m
*
*     -----------------------
*     Define extra space TRAJ
*     -----------------------
      real xth_w_m (l_ni*l_nj*l_nk), yth_w_m (l_ni*l_nj*l_nk), zth_w_m (l_ni*l_nj*l_nk)
      real xcth_w_m(l_ni*l_nj*l_nk), ycth_w_m(l_ni*l_nj*l_nk), zcth_w_m(l_ni*l_nj*l_nk)
*
***********************************************************************
      if (.NOT.Adw_nosetint_L                   ) call gem_stop ('NOT Adw_nosetint_L not done in POS_AD',-1)
      if (.NOT.Adw_interp_type_S(1:5).eq.'LAG3D') call gem_stop ('NOT Interp LAG3D   not done in INT_AD',-1)
************************************************************************
      if (Lun_debug_L) write (Lun_out,1000)
************************************************************************
*
*     Recover TRAJ TRT0 from ORTR for ADW_MAIN_3_INT_AD when Orh_icn .eq. Schm_itcn
*     -----------------------------------------------------------------------------
      if (Orh_icn.eq.Schm_itcn) then
*
      key0_m_= VMM_KEY (trt0_m)
      keyt_m_= VMM_KEY (ortr_m)
*
      do n=1,Tr3d_ntr
         key0_m(n) = key0_m_ + n
         keyt_m(n) = keyt_m_ + n
      end do
      if (Tr3d_ntr.gt.0) then
          err = vmmlod(key0_m,Tr3d_ntr)
          err = vmmlod(keyt_m,Tr3d_ntr)
          do n=1,Tr3d_ntr
             err = vmmget(key0_m(n),patr0_m,tr0_m)
             err = vmmget(keyt_m(n),paort_m,ort_m)
!$omp parallel do
             do k=1,l_nk+1
             do j=1,l_nj
             do i=1,l_ni
                tr0_m(i,j,k) = ort_m(i,j,k)
             end do
             end do
             end do
!$omp end parallel do
*
          end do
          err = vmmuld(key0_m,Tr3d_ntr)
          err = vmmuld(keyt_m,Tr3d_ntr)
      endif
*
      endif
*
*     Zero adjoint variables
*     ----------------------
      u = 0.
      v = 0.
      w = 0.
*
*     ------------------
*     TRAJECTORY (START)
*     ------------------
      call adw_main_1_wnd_tr ( u_m, v_m, w_m, l_ni, l_nj, G_nk)
*
*     -------------------------------------------
*     Preserve fields in extra space TRAJ (START)
*     -------------------------------------------
      pnlkey1(1) = VMM_KEY(xth_m)
      pnlkey1(2) = VMM_KEY(yth_m)
      pnlkey1(3) = VMM_KEY(zth_m)
      pnlkey1(4) = VMM_KEY(xcth_m)
      pnlkey1(5) = VMM_KEY(ycth_m)
      pnlkey1(6) = VMM_KEY(zcth_m)
      pnlod = 6
*
      pnerr = vmmlod(pnlkey1,pnlod)
*
      pnerr = VMM_GET_VAR(xth_m)
      pnerr = VMM_GET_VAR(yth_m)
      pnerr = VMM_GET_VAR(zth_m)
      pnerr = VMM_GET_VAR(xcth_m)
      pnerr = VMM_GET_VAR(ycth_m)
      pnerr = VMM_GET_VAR(zcth_m)
*
      xth_w_m  = xth_m 
      yth_w_m  = yth_m 
      zth_w_m  = zth_m 
      xcth_w_m = xcth_m
      ycth_w_m = ycth_m
      zcth_w_m = zcth_m
*
      uwork_m = u_m
      vwork_m = v_m
      wwork_m = w_m
*
      pnerr = vmmuld(-1,0)
*
*     -----------------------------------------
*     Preserve fields in extra space TRAJ (END)
*     -----------------------------------------
*
*     Recover TRAJ upstream positions 
*     -------------------------------
      call v4d_rwtraj (5,u_m,v_m,w_m)
*
*     ----------------
*     TRAJECTORY (END)
*     ----------------
*
*     ADJOINT CALCULATIONS
*     --------------------
      call adw_main_3_int_ad ( u, v, w, u_m, v_m, w_m )
*
*     ------------------------------------------
*     Reset fields from extra space TRAJ (START)
*     ------------------------------------------
      pnlkey1(1) = VMM_KEY(xth_m)
      pnlkey1(2) = VMM_KEY(yth_m)
      pnlkey1(3) = VMM_KEY(zth_m)
      pnlkey1(4) = VMM_KEY(xcth_m)
      pnlkey1(5) = VMM_KEY(ycth_m)
      pnlkey1(6) = VMM_KEY(zcth_m)
      pnlod = 6
*
      pnerr = vmmlod(pnlkey1,pnlod)
*
      pnerr = VMM_GET_VAR(xth_m)
      pnerr = VMM_GET_VAR(yth_m)
      pnerr = VMM_GET_VAR(zth_m)
      pnerr = VMM_GET_VAR(xcth_m)
      pnerr = VMM_GET_VAR(ycth_m)
      pnerr = VMM_GET_VAR(zcth_m)
*
      xth_m  = xth_w_m 
      yth_m  = yth_w_m 
      zth_m  = zth_w_m 
      xcth_m = xcth_w_m
      ycth_m = ycth_w_m
      zcth_m = zcth_w_m
*
      u_m = uwork_m
      v_m = vwork_m
      w_m = wwork_m
*
      pnerr = vmmuld(-1,0)
*
*     ----------------------------------------
*     Reset fields from extra space TRAJ (END)
*     ----------------------------------------
*
      call adw_main_2_pos_ad ( F_it, u, v, w, u_m, v_m, w_m )
*
      call adw_main_1_wnd_ad ( u, v, w, l_ni, l_nj, G_nk)
*
***********************************************************************
*
 1000  format(3X,'ADJ of ADVECTE THE RIGHT-HAND-SIDES: (S/R ADW_MAIN_AD)')
*
      return
      end
